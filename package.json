{
	"name": "make-python-typehint-great",
	"displayName": "Make Type Hint Great",
	"version": "0.0.1",
	"publisher": "fusong",
	"description": "Better Type hint completion for Python.",
	"icon": "resource/images/icon.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/Natural-selection1/Make-Type-Hint-Great"
	},
	"license": "MIT",
	"categories": [
		"Programming Languages"
	],
	"keywords": [
		"Python",
		"typehint",
		"completion",
		"autocompletion",
		"parameter"
	],
	"engines": {
		"vscode": "^1.81.0"
	},
	"activationEvents": [
		"onLanguage:python"
	],
	"main": "./dist/extension",
	"contributes": {
		"commands": [],
		"languages": [
			{
				"id": "python",
				"aliases": [
					"Python"
				],
				"extensions": [
					".py"
				]
			}
		],
		"configuration": {
			"title": "Python Type Hint",
			"properties": {
				"python.typeHint.appendBrackets": {
					"type": "boolean",
					"default": true,
					"description": "Whether to append brackets to refinable types"
				},
				"python.typeHint.enableCustomTypes": {
					"type": "boolean",
					"default": true,
					"description": "Enable custom type hints from workspace"
				},
				"python.typeHint.enableFileTypes": {
					"type": "boolean",
					"default": true,
					"description": "Enable type hints from current file"
				},
				"python.typeHint.enableBaseTypes": {
					"type": "boolean",
					"default": true,
					"description": "Enable built-in and typing module type hints"
				}
			}
		}
	},
	"scripts": {
		"package": "vsce package",
		"publish": "vsce publish",
		"vscode:prepublish": "npm run format && npm run rebuild && npm run compile",
		"rebuild": "electron-rebuild -f -w tree-sitter -v 30.4.0 && electron-rebuild -f -w tree-sitter-python -v 30.4.0",
		"lint": "eslint --fix --ext .ts .",
		"compile": "webpack --mode production",
		"watch": "webpack --mode development --watch",
		"test-compile": "tsc -p ./",
		"test": "npm run test-compile && node ./out/test/runTest.js",
		"format": "prettier --write \"src/**/*.ts\"",
		"format:check": "prettier --check \"src/**/*.ts\""
	},
	"devDependencies": {
		"@electron/rebuild": "^3.7.1",
		"@types/glob": "^8.1.0",
		"@types/mocha": "^10.0.1",
		"@types/node": "^20.5.9",
		"@types/vscode": "^1.81.0",
		"@typescript-eslint/eslint-plugin": "^6.5.0",
		"@typescript-eslint/parser": "^6.5.0",
		"@vscode/test-electron": "^2.4.1",
		"electron": "^30.4.0",
		"node-gyp": "^9.4.1",
		"prebuild-install": "^7.1.2",
		"prettier": "^3.4.2",
		"ts-loader": "^9.4.4",
		"tslint": "^6.1.3",
		"typescript": "^5.2.2",
		"webpack": "^5.95.0",
		"webpack-cli": "^5.1.4"
	},
	"dependencies": {
		"@vscode/python-extension": "^1.0.5",
		"node-gyp-build": "^4.8.4",
		"pyright": "^1.1.390",
		"tree-sitter": "^0.22.1",
		"tree-sitter-python": "^0.23.5"
	}
}
